@{
    ViewData["Title"] = "Shopee | Mua và bán";
}

<!-- ========================= SECTION CONTENT ========================= -->
<section class="section-content padding-y">

<!-- ============================ COMPONENT REGISTER   ================================= -->
	<div class="card mx-auto" style="max-width:520px; margin-top:40px;">
      <article class="card-body">
		<header class="mb-4"><h4 class="card-title">Đăng ký</h4></header>
		    <form method="post" asp-action="register">
                <div class="form-row">
                    <div class="col form-group">
                        <label>Họ tên</label>
                        <input type="text" name="fullName" class="form-control" required>
                    </div>
                </div>
                <div class="form-group">
                    <label>Tên đăng nhập</label>
                    <input type="tel" name="username" class="form-control" required>
                </div>
                <div class="form-group">
                    <label>Email</label>
                    <input type="email" name="email" class="form-control" required>
                </div>
                <div class="form-group">
                    <label>Số điện thoại</label>
                    <input type="tel" name="phoneNumber" class="form-control" required>
                </div>
                <div class="form-row">
                    <div class="form-group col-md-6">
                        <label>Mật khẩu</label>
                        <input type="password" name="password" class="form-control" required>
                    </div>
                    <div class="form-group col-md-6">
                        <label>Nhắc lại mật khẩu</label>
                        <input type="password" name="confirmPassword" class="form-control" required>
                    </div>
                </div>
                <small class="form-text text-muted mb-4">Chúng tôi sẽ không bao giờ chia sẻ thông tin của bạn với bất kỳ ai khác.</small>
                <div class="form-group">
                    <button type="submit" class="btn btn-primary btn-block">Đăng ký</button>
                </div>
            </form>
		</article><!-- card-body.// -->
    </div> <!-- card .// -->
    <p class="text-center mt-4">Bạn đã có tài khoản? <a href="login">Đăng nhập</a></p>
    <br><br>
<!-- ============================ COMPONENT REGISTER  END.// ================================= -->


</section>
<!-- ========================= SECTION CONTENT END// ========================= -->