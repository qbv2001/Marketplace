<section class="py-3 bg-light">
  <div class="container">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="#">Trang chủ</a></li>
        <li class="breadcrumb-item"><a href="#">@ViewBag.productDetail.Category.Name</a></li>
        @* <li class="breadcrumb-item"><a href="#">Sub category</a></li> *@
        <li class="breadcrumb-item active" aria-current="page">@ViewBag.productDetail.Name</li>
    </ol>
  </div>
</section>

<!-- ========================= SECTION CONTENT ========================= -->
<section class="section-content bg-white padding-y">
<div class="container">

<!-- ============================ ITEM DETAIL ======================== -->
	<div class="row">
		<aside class="col-md-6">
<div class="card">
<article class="gallery-wrap"> 
	<div class="img-big-wrap">
	  <div> <a href="#"><img src="@ViewBag.productDetail.ImageUrl"></a></div>
	</div> <!-- slider-product.// -->
	<div class="thumbs-wrap">
		@foreach (var image in ViewBag.productDetail.Images)
        {
	  		<a href="#" class="item-thumb"> <img src="@image.ImageUrl"></a>

		}
	</div> <!-- slider-nav.// -->
</article> <!-- gallery-wrap .end// -->
</div> <!-- card.// -->
		</aside>
		<main class="col-md-6">
<article class="product-info-aside">

<h2 class="title mt-3">@ViewBag.productDetail.Name </h2>

<div class="rating-wrap my-3">
	<ul class="rating-stars">
		<li style="width:@(ViewBag.StarPercent*20)%" class="stars-active"> 
			<i class="fa fa-star"></i> <i class="fa fa-star"></i> 
			<i class="fa fa-star"></i> <i class="fa fa-star"></i> 
			<i class="fa fa-star"></i> 
		</li>
		<li>
			<i class="fa fa-star"></i> <i class="fa fa-star"></i> 
			<i class="fa fa-star"></i> <i class="fa fa-star"></i> 
			<i class="fa fa-star"></i> 
		</li>
	</ul>
	<small class="label-rating text-muted">@ViewBag.TotalReviews Đánh Giá</small>
	<small class="label-rating text-success"> <i class="fa fa-clipboard-check"></i> 154 Đã Bán </small>
</div> <!-- rating-wrap.// -->

<div class="mb-3"> 
	<var class="price h4">@ViewBag.productDetail.Price ₫</var>
</div> <!-- price-detail-wrap .// -->

<p>Thông tin chi tiết </p>


<dl class="row">
  <dt class="col-sm-3">Thương hiệu</dt>
  <dd class="col-sm-9"><a href="#">Apple</a></dd>

  <dt class="col-sm-3">Xuất xứ thương hiệu</dt>
  <dd class="col-sm-9">Mỹ</dd>

  <dt class="col-sm-3">Kích thước</dt>
  <dd class="col-sm-9">Dài 164 mm - Ngang 75.4 mm - Dày 7.9 mm</dd>

</dl>

	<div class="form-row  mt-4">
		<div class="form-group col-md flex-grow-0">
			<div class="input-group mb-3 input-spinner">
			  <div class="input-group-prepend">
			    <button class="btn btn-light" type="button" id="button-plus"> + </button>
			  </div>
			  <input type="text" class="form-control" value="1">
			  <div class="input-group-append">
			    <button class="btn btn-light" type="button" id="button-minus"> &minus; </button>
			  </div>
			</div>
		</div> <!-- col.// -->
		<div class="form-group col-md">
			<div  class="btn">
				<span class="text text-muted">1200 sản phẩm có sẵn</span>
			</div>
		</div> <!-- col.// -->
	</div> <!-- row.// -->
	<div class="form-row">
		<div class="form-group col-md">
			<a href="#" class="btn btn-light">
				<i class="fas fa-shopping-cart"></i> <span class="text">Thêm Vào Giỏ Hàng</span> 
			</a>
			<a href="#"  class="btn  btn-primary">
				<span class="text">Mua Ngay</span> 
			</a>
		</div> <!-- col.// -->
	</div> <!-- row.// -->

</article> <!-- product-info-aside .// -->
		</main> <!-- col.// -->
	</div> <!-- row.// -->

<!-- ================ ITEM DETAIL END .// ================= -->


</div> <!-- container .//  -->
</section>
<!-- ========================= SECTION CONTENT END// ========================= -->

