    <div class="offer-dedicated-body-left">
        <div class="tab-content" id="pills-tabContent">
            <div class="tab-pane fade active show" id="pills-reviews" role="tabpanel" aria-labelledby="pills-reviews-tab">
                <div class="bg-white rounded shadow-sm p-4 mb-4 clearfix graph-star-rating">
                    <h5 class="mb-0 mb-4">Đánh Giá Sản Phẩm</h5>
                    <div class="graph-star-rating-header">
                        <div class="rating-wrap my-3">
                            <ul class="rating-stars">
                                <li style="width:@(ViewBag.StarPercent*20)%" class="stars-active">
                                    <i class="fa fa-star"></i> <i class="fa fa-star"></i> 
                                    <i class="fa fa-star"></i> <i class="fa fa-star"></i> 
                                    <i class="fa fa-star"></i> 
                                </li>
                                <li>
                                    <i class="fa fa-star"></i> <i class="fa fa-star"></i> 
                                    <i class="fa fa-star"></i> <i class="fa fa-star"></i> 
                                    <i class="fa fa-star"></i> 
                                </li>
                            </ul>
                            <small class="label-rating text-muted">@ViewBag.TotalReviews Đánh Giá</small>
                        </div> <!-- rating-wrap.// -->
                        <p class="text-black mb-4 mt-2">@ViewBag.StarPercent trên 5</p>
                    </div>
                    <div class="graph-star-rating-body">
                        @for (int i = 4; i >= 0; i--)
                        {
                            <div class="rating-list">
                            <div class="rating-list-left text-black">
                                @(i+1) Sao @{float percen = (float)ViewBag.TotalStarReviews[i]/@ViewBag.TotalReviews*100;}
                            </div>
                            <div class="rating-list-center">
                                <div class="progress">
                                    <div style="width: @percen%" aria-valuemax="5" aria-valuemin="0" aria-valuenow="5" role="progressbar" class="progress-bar bg-primary">
                                        <span class="sr-only">80% Complete (danger)</span>
                                    </div>
                                </div>
                            </div>
                            <div class="rating-list-right text-black">@ViewBag.TotalStarReviews[i]</div>
                        </div>
                        }
                    </div>
                </div>
                <div class="bg-white rounded shadow-sm p-4 mb-4 restaurant-detailed-ratings-and-reviews">
                    <a href="#" class="btn btn-outline-primary btn-sm float-right">Top đánh giá</a>
                    <h5 class="mb-1">Tất Cả Đánh Giá</h5>
                    @foreach (var review in @ViewBag.Reviews)
                    {
                    <div class="reviews-members pt-4 pb-4">
                        <div class="media">
                            <a href="#"><img alt="Generic placeholder image" src="@review.User.ImageUrl" class="mr-3 rounded-pill"></a>
                            <div class="media-body">
                                <div class="reviews-members-header">
                                    <h6 class="mb-1"><a class="text-black" href="#">@review.User.Username</a></h6>
                                    <p class="text-muted">@review.CreatedAt.ToString("HH:mm:ss dd-MM-yyyy")</p>
                                </div>
                                <div class="reviews-members-body">
                                    <p>@review.Comment</p>
                                </div>
                                @* <div class="reviews-members-footer">
                                    <a class="total-like" href="#"><i class="icofont-thumbs-up"></i> 856M</a> <a class="total-like" href="#"><i class="icofont-thumbs-down"></i> 158K</a>
                                </div> *@
                            </div>
                        </div>
                    </div>
                    <hr>
                    }
                    <a class="text-center w-100 d-block mt-4 font-weight-bold" href="#">Xem tất cả</a>
                </div>
            </div>
        </div>
    </div>